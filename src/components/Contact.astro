// Contact component script
---

<section class="contact" id="contact">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Let's Work Together</h2>
      <p class="section-subtitle">Ready to bring your cloud solutions to life? Get in touch and let's create something amazing.</p>
    </div>
    
    <div class="contact-content">
      <div class="contact-info">
        <div class="contact-intro">
          <h3>Get In Touch</h3>
          <p>
            I'm always excited to work on new projects and collaborate with amazing people. 
            Whether you have a cloud security challenge or want to discuss Azure solutions, 
            I'd love to hear from you.
          </p>
        </div>
        
        <div class="contact-methods">
          <div class="contact-item">
            <div class="contact-icon">
              <svg fill="currentColor" height="24" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg">
                <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"></path>
              </svg>
            </div>
            <div class="contact-details">
              <h4>Primary Email</h4>
              <a href="mailto:contact@aglobaltec.com">contact@aglobaltec.com</a>
              <p>For new projects, collaborations, and cloud security inquiries</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
