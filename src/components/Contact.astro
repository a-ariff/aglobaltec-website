---
// Contact component script
import LinkedInBadge from './LinkedInBadge.astro';
---

<section class="contact" id="contact">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Let's Work Together</h2>
      <p class="section-subtitle">Ready to bring your cloud solutions to life? Get in touch and let's create something amazing.</p>
    </div>
    
    <div class="contact-content">
      <div class="contact-info">
        <div class="contact-intro">
          <h3>Get In Touch</h3>
          <p>
            I'm always excited to work on new projects and collaborate with amazing people. 
            Whether you have a cloud security challenge or want to discuss Azure solutions, 
            I'd love to hear from you.
          </p>
        </div>
        
        <div class="contact-methods">
          <div class="contact-item">
            <div class="contact-icon">
              <svg fill="currentColor" height="24" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg">
                <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"></path>
              </svg>
            </div>
            <div class="contact-details email-spacing">
              <h4>Primary Email</h4>
              <a class="contact-info" href="mailto:contact@aglobaltec.com">contact@aglobaltec.com</a>
              <p>For new projects, collaborations, and cloud security inquiries</p>
            </div>
          </div>
          
          <div class="contact-item">
            <div class="linkedin-container">
              <!-- LinkedIn Badge Component (primary) -->
              <LinkedInBadge 
                profileUrl="https://nz.linkedin.com/in/ariff-mohamed" 
              />
              
              <!-- Fallback LinkedIn Link (traditional) -->
              <div class="linkedin-fallback">
                <div class="contact-icon">
                  <svg fill="currentColor" height="24" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                </div>
                <div class="contact-details">
                  <h4>LinkedIn Profile</h4>
                  <a class="contact-info linkedin-link" href="https://nz.linkedin.com/in/ariff-mohamed" target="_blank" rel="noopener noreferrer">
                    Connect on LinkedIn
                  </a>
                  <p>Professional network and career updates</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
.contact {
  padding: 4rem 0;
  background: var(--bg-secondary);
}

.contact-content {
  margin-top: 2rem;
}

.contact-info {
  max-width: 600px;
  margin: 0 auto;
}

.contact-intro h3 {
  font-size: 1.5rem;
  color: var(--text-primary);
  margin-bottom: 1rem;
}

.contact-intro p {
  color: var(--text-secondary);
  line-height: 1.6;
  margin-bottom: 2rem;
}

.contact-methods {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.contact-item {
  display: flex;
  align-items: flex-start;
  gap: 1rem;
  padding: 1.5rem;
  background: var(--bg-primary);
  border-radius: 12px;
  border: 1px solid var(--border-color);
  transition: all 0.3s ease;
}

.contact-item:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
}

.contact-icon {
  width: 48px;
  height: 48px;
  background: var(--accent-color);
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.contact-icon svg {
  color: white;
}

.contact-details h4 {
  font-size: 1.1rem;
  color: var(--text-primary);
  margin-bottom: 0.5rem;
}

.contact-details .contact-info {
  color: var(--accent-color);
  text-decoration: none;
  font-weight: 500;
  font-size: 1.1rem;
  display: block;
  margin-bottom: 0.5rem;
}

.contact-details .contact-info:hover {
  text-decoration: underline;
}

.contact-details p {
  color: var(--text-secondary);
  font-size: 0.9rem;
  line-height: 1.5;
  margin: 0;
}

.email-spacing {
  line-height: 1.6;
}

/* LinkedIn Container Styles */
.linkedin-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.linkedin-fallback {
  display: flex;
  align-items: flex-start;
  gap: 1rem;
}

.linkedin-link {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  color: var(--accent-color);
  text-decoration: none;
  font-weight: 500;
  font-size: 1.1rem;
  transition: all 0.3s ease;
}

.linkedin-link:hover {
  text-decoration: underline;
  transform: translateX(2px);
}

.linkedin-link::after {
  content: 'â†—';
  font-size: 0.9rem;
  opacity: 0.7;
}

@media (max-width: 768px) {
  .contact {
    padding: 3rem 0;
  }
  
  .contact-item {
    padding: 1rem;
  }
  
  .contact-icon {
    width: 40px;
    height: 40px;
  }
  
  .linkedin-container {
    gap: 0.5rem;
  }
}
</style>
