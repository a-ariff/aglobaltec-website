<style>
  .about {
    padding: 6rem 0;
    background: var(--bg-secondary);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--text-color);
    margin-bottom: 1rem;
  }

  .section-subtitle {
    font-size: 1.1rem;
    color: var(--text-secondary);
    max-width: 500px;
    margin: 0 auto;
  }

  .about-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 4rem;
    align-items: start;
  }

  .about-intro {
    font-size: 1.1rem;
    line-height: 1.7;
    color: var(--text-secondary);
    margin-bottom: 3rem;
  }

  .skills-section,
  .values-section {
    margin-bottom: 3rem;
  }

  .skills-section h3,
  .values-section h3 {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-color);
    margin-bottom: 1.5rem;
  }

  .skills-grid {
    display: grid;
    gap: 2rem;
  }

  .skill-category h4 {
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--accent-color);
    margin-bottom: 0.5rem;
  }

  .skills {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .skill-tag {
    background: var(--accent-color);
    color: white;
    padding: 0.3rem 0.8rem;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 500;
  }

  .values-list {
    display: grid;
    gap: 1.5rem;
  }

  .value-item {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }

  .value-icon {
    font-size: 2rem;
    flex-shrink: 0;
  }

  .value-content h4 {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text-color);
    margin-bottom: 0.5rem;
  }

  .value-content p {
    color: var(--text-secondary);
    line-height: 1.6;
  }

  .about-visual {
    display: flex;
    justify-content: center;
  }

  .image-placeholder {
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  @media (max-width: 768px) {
    .about {
      padding: 4rem 0;
    }

    .about-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .section-title {
      font-size: 2rem;
    }

    .skills-grid {
      gap: 1.5rem;
    }

    .about-visual {
      order: -1;
    }

    .image-placeholder svg {
      width: 250px;
      height: 300px;
    }
  }
</style>
