<style>
  .academic-section { padding: 4rem 0; background: var(--bg-primary); }
  .academic-section h2 { text-align: center; margin-bottom: 1rem; font-size: 2.5rem; color: var(--text-primary); }
  .section-subtitle { text-align: center; margin-bottom: 2rem; color: var(--text-secondary); }
  .academic-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(320px, 1fr)); gap: 2rem; margin: 2rem 0; }
