  .academic-header h3 { color: var(--accent-color); margin: 0; font-size: 1.25rem; }
  .assignment-type { background: var(--accent-color); color: #fff; padding: 0.25rem 0.6rem; border-radius: 12px; font-size: 0.8rem; }
  .methodology h4 { margin: 1rem 0 0.5rem; }
  .methodology ul { margin: 0; padding-left: 1.1rem; }
  .academic-note { background: #f6f8ff; border-left: 4px solid var(--accent-color); padding: 1rem; border-radius: 8px; }
</style>
