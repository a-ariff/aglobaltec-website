}

.gradient-text {
  background: linear-gradient(45deg, var(--blue-primary), var(--purple-primary), var(--teal-primary));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.gradient-text-alt {
  background: linear-gradient(45deg, var(--red-primary), var(--orange-primary), var(--yellow-primary));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
