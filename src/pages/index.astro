<style>
/* Import colorful fonts */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

/* Color Variables */
:root {
  --blue-primary: #0078d4;
  --blue-secondary: #005a9e;
  --purple-primary: #8b5cf6;
  --purple-secondary: #7c3aed;
  --green-primary: #10b981;
  --green-secondary: #059669;
  --orange-primary: #f59e0b;
  --orange-secondary: #d97706;
  --red-primary: #ef4444;
  --red-secondary: #dc2626;
  --teal-primary: #14b8a6;
  --teal-secondary: #0d9488;
  --pink-primary: #ec4899;
  --pink-secondary: #db2777;
  --indigo-primary: #6366f1;
  --indigo-secondary: #5b21b6;
  --yellow-primary: #eab308;
  --yellow-secondary: #ca8a04;
}

/* Reset and Base Styles */
* {
  box-sizing: border-box;
}

body {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  line-height: 1.6;
  color: #333;
  margin: 0;
  padding: 0;
  overflow-x: hidden;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 2rem;
}

/* Colorful Hero Section */
.hero-section {
  position: relative;
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: radial-gradient(1200px 600px at 20% -10%, #23324a 0%, transparent 60%),
            radial-gradient(900px 500px at 120% 20%, #1f3a5b 0%, transparent 55%),
            linear-gradient(180deg, #0b1220 0%, #0a0f1a 100%);
  color: white;
  overflow: hidden;
  text-align: center;
  padding: 2rem;
}

/* Color Orbs */
.color-orbs {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 1;
}

.orb {
  position: absolute;
  border-radius: 50%;
  filter: blur(70px);
  opacity: 0.7;
  animation: float 8s ease-in-out infinite;
}

.orb-1 {
  width: 300px;
  height: 300px;
  background: radial-gradient(circle, var(--blue-primary), var(--purple-primary));
  top: 10%;
  left: 10%;
  animation-delay: 0s;
}

.orb-2 {
  width: 250px;
  height: 250px;
  background: radial-gradient(circle, var(--green-primary), var(--teal-primary));
  top: 60%;
  right: 10%;
  animation-delay: 2s;
}

.orb-3 {
  width: 200px;
  height: 200px;
  background: radial-gradient(circle, var(--pink-primary), var(--red-primary));
  bottom: 20%;
  left: 30%;
  animation-delay: 4s;
}

.orb-4 {
  width: 350px;
  height: 350px;
  background: radial-gradient(circle, var(--orange-primary), var(--yellow-primary));
  top: 40%;
  right: 30%;
  animation-delay: 6s;
}

.hero-content {
  max-width: 800px;
  z-index: 2;
  position: relative;
}

/* Rainbow Text Effect */
.rainbow-text {
  font-size: 3.5rem;
  font-weight: 700;
  margin-bottom: 1rem;
  opacity: 1 !important;
  visibility: visible !important;
  animation: fadeInUp 1s ease-out, continuousRainbow 2s linear infinite 1s;
  background: linear-gradient(90deg,
    #ff0080, #ff8c00, #40e0d0, #9370db, #00ff00, #ff4500, #ff0080, #ff0080);
  background-size: 800% 800%;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  color: white;
  text-shadow: 0 2px 24px rgba(64, 224, 208, 0.15), 0 0 40px rgba(255, 255, 255, 0.08);
}

@keyframes continuousRainbow {
  0%   { background-position: 0% 50%;   filter: hue-rotate(0deg) brightness(1.2); }
  25%  { background-position: 100% 50%; filter: hue-rotate(90deg) brightness(1.3); }
  50%  { background-position: 200% 50%; filter: hue-rotate(180deg) brightness(1.4); }
  75%  { background-position: 300% 50%; filter: hue-rotate(270deg) brightness(1.3); }
  100% { background-position: 400% 50%; filter: hue-rotate(360deg) brightness(1.2); }
}


.typing-animation {
  font-size: 1.5rem;
  font-weight: 300;
  margin-bottom: 1.5rem;
  overflow: hidden;
  border-right: 3px solid rgba(255, 255, 255, 0.7);
  white-space: nowrap;
  animation: 
    fadeInUp 1s ease-out 0.2s,
    typing 3.5s steps(60, end) 0.5s,
    blink-caret 0.75s step-end infinite 0.5s;
  opacity: 0;
  animation-fill-mode: forwards;
}

.hero-description {
  font-size: 1.2rem;
  margin-bottom: 2rem;
  opacity: 0.95;
  line-height: 1.6;
  text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
}

.fade-in-delayed {
  animation: fadeInUp 1s ease-out 0.4s;
  opacity: 0;
  animation-fill-mode: forwards;
}

.hero-buttons {
  display: flex;
  gap: 1.5rem;
  justify-content: center;
  flex-wrap: wrap;
  animation: fadeInUp 1s ease-out 0.6s;
  opacity: 0;
  animation-fill-mode: forwards;
}

.btn-primary, .btn-secondary, .btn-accent {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 1rem 2rem;
  border-radius: 50px;
  text-decoration: none;
  font-weight: 600;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.btn-primary {
  background: linear-gradient(45deg, var(--blue-primary), var(--purple-primary));
  color: white;
  box-shadow: 0 4px 20px rgba(0, 120, 212, 0.4);
}

.btn-secondary {
  background: linear-gradient(45deg, var(--green-primary), var(--teal-primary));
  color: white;
  box-shadow: 0 4px 20px rgba(16, 185, 129, 0.4);
}

.btn-accent {
  background: linear-gradient(45deg, var(--pink-primary), var(--orange-primary));
  color: white;
  box-shadow: 0 4px 20px rgba(236, 72, 153, 0.4);
}

.btn-primary:hover, .btn-secondary:hover, .btn-accent:hover {
  transform: translateY(-3px) scale(1.05);
  box-shadow: 0 12px 30px rgba(0, 0, 0, 0.3);
}

.pulse-animation {
  animation: colorPulse 2s infinite;
}

@keyframes colorPulse {
  0% { box-shadow: 0 0 0 0 rgba(0, 120, 212, 0.7); }
  70% { box-shadow: 0 0 0 15px rgba(0, 120, 212, 0); }
  100% { box-shadow: 0 0 0 0 rgba(0, 120, 212, 0); }
}

/* Enhanced Floating Icons */
.hero-visual {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 1;
}

.floating-icon {
  position: absolute;
  font-size: 3rem;
  opacity: 0.8;
  animation: floatIconColor 6s ease-in-out infinite;
  filter: drop-shadow(0 4px 10px rgba(0, 0, 0, 0.3));
}

.azure-icon {
  top: 15%;
  left: 10%;
  animation-delay: 0s;
}

.security-icon {
  top: 25%;
  right: 15%;
  animation-delay: 1s;
}

.automation-icon {
  bottom: 30%;
  left: 15%;
  animation-delay: 2s;
}

.code-icon {
  top: 60%;
  right: 30%;
  animation-delay: 3s;
}

.shield-icon {
  bottom: 15%;
  right: 10%;
  animation-delay: 4s;
}

@keyframes floatIconColor {
  0%, 100% { 
    transform: translateY(0px) rotate(0deg);
    opacity: 0.6;
    filter: hue-rotate(0deg);
  }
  50% { 
    transform: translateY(-25px) rotate(180deg);
    opacity: 0.9;
    filter: hue-rotate(180deg);
  }
}

/* Colorful Projects Section */
.projects-section {
  padding: 5rem 0;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  position: relative;
}

.section-header {
  text-align: center;
  margin-bottom: 4rem;
}

.section-title {
  font-size: 3rem;
  font-weight: 700;
  margin-bottom: 1rem;
